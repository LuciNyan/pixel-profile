{
  "compilerOptions": {
    "types": ["node"],
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "api",
    "src"
  ],
  "exclude": ["node_modules", "packages"]
}
